{{!-- set a property, addNewQuestion to true or false. When true, the form will show. When false, the button will show --}}

{{#if addNewClient}}
<div class=" main columns">
  {{!-- <div class="col-md-8 main-left">

  </div> --}}
  <div class="main-right">
    <h3>Enter Details Below:</h3>
  <form>
    <div class="form-group">
      {{!-- <label for="firstName">First Name</label> --}}
      {{!-- input helper for form inputs --}}
        {{input value=firstName id="firstName" placeholder="First Name" class="text-box"}}
    </div>
    <div class="form-group">
      {{!-- <label for="lastName">Last Name</label> --}}
        {{input value=lastName id="lastName"placeholder="Last Name" class="text-box"}}
    </div>
    <div class="form-group">
      {{!-- <label for="service">Service</label> --}}
        {{input value=service id="service"placeholder="Service" class="text-box"}}
    </div>
    <div class="form-group">
      {{!-- <label for="prices">Price</label> --}}
        {{input value=prices id="prices"placeholder="Price" class="text-box"}}
    </div>
    <div class="form-group">
      {{!-- <label for="attendant">Attendant</label> --}}
        {{input value=attendant id="attendant"placeholder="Attendant" class="text-box"}}
    </div>
    {{!-- submit button has the saveQuestion1 action attached to begin the process of saving the new question added by a user. --}}
    <button class="btn btn-primary" {{action 'saveClient1'}}>Submit</button>
  </form>
  </div>
</div>
{{else}}
  <p>Thank you, {{firstName}} {{lastName}}, your service details have been SUCCESSFULLY submitted. :-)</p>
{{/if}}
