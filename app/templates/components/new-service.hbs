<h2>New Service</h2>
<div>
  <form>
    <div class="form-group">
      <label for="author">Name</label>
      {{!-- input helper for form inputs --}}
      {{client.username}}
    </div>
    <div class="form-group">
      <label for="serviced">Service</label>
        {{input value=serviced id="serviced"}}
    </div>
    <div class="form-group">
      <label for="price">Price</label>
        {{input value=price id="price"}}
    </div>
    {{!-- submit button has the saveQuestion1 action attached to begin the process of saving the new question added by a user. --}}
    <button class="btn btn-primary" {{action 'saveService'}}>Save Service</button>
  </form>
</div>
